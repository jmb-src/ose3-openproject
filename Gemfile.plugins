version = ENV['OPENPROJECT_VERSION'][1] # 2nd char: v6.1.5
backlogversiontag = ENV['OPENPROJECT_VERSION']

if ENV['OPENPROJECT_PLUGIN_BACKLOGS'] == 'true'
    gem "openproject-backlogs", git: "https://github.com/finnlabs/openproject-backlogs.git", :tag => "v#{backlogversiontag}"
    gem "openproject-pdf_export", git: "https://github.com/finnlabs/openproject-pdf_export.git", :tag => "v#{backlogversiontag}"
end
if ENV['OPENPROJECT_PLUGIN_DOCUMENTS'] == 'true'
    gem "openproject-documents", git: "https://github.com/opf/openproject-documents.git", :branch => "stable/#{version}"
end
